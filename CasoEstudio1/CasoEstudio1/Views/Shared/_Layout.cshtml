<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>Proyecto Web JN</title>
    <meta name="description" content="" />

    @* Sección CSS *@
    <link rel="stylesheet" href="~/lib/css/boxicons.css" />
    <link rel="stylesheet" href="~/lib/css/core.css" />
    <link rel="stylesheet" href="~/lib/css/theme-default.css" />
    <link rel="stylesheet" href="~/lib/css/demo.css" />
    <link rel="stylesheet" href="~/lib/css/perfect-scrollbar.css" />

    @* Sección JS *@
    <script src="~/lib/js/helpers.js"></script>
    <script src="~/lib/js/config.js"></script>
    @* <script src="~/lib/js/jquery.js"></script> *@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
</head>

<body>
    @{
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
        Func<string, string, string> active = (ctrl, act) =>
            (string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase)
             && (string.IsNullOrEmpty(act) || string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase)))
            ? "active" : "";
    }

    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme site-sidebar">
                <div class="app-brand demo">
                    <a href="@Url.Action("Index","Home")" class="app-brand-link">
                        <img src="~/lib/img/logo.png" alt="" class="brand-logo" />
                        <span class="app-brand-text demo menu-text fw-bolder ms-2">EC1 JN</span>
                    </a>

                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        <i class="bx bx-chevron-left bx-sm align-middle"></i>
                    </a>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1">
                    <li class="menu-item @(active("Home","Index"))">
                        <a href="@Url.Action("Index","Home")" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-home-circle"></i>
                            <div data-i18n="Analytics">Inicio</div>
                        </a>
                    </li>

                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Ejercicios</span>
                    </li>

                    <li class="menu-item @(active("Home","Registrar"))">
                        <a href="@Url.Action("Registrar","Home")" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-plus-circle"></i>
                            <div>Registrar solicitud</div>
                        </a>
                    </li>

                    <li class="menu-item @(active("Home","Consultar"))">
                        <a href="@Url.Action("Consultar","Home")" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-list-ul"></i>
                            <div>Consultar solicitudes</div>
                        </a>
                    </li>

                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Pages</span>
                    </li>
                </ul>
            </aside>
            <div class="layout-page">

                <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme site-navbar"
                     id="layout-navbar">
                    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
                        <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                            <i class="bx bx-menu bx-sm"></i>
                        </a>
                    </div>
                </nav>

                <main class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        @{
                            var successMsg = TempData["Success"] as string;
                            var errorMsg = TempData["Error"] as string;
                        }

                        @if (!string.IsNullOrEmpty(successMsg))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @successMsg
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(errorMsg))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @errorMsg
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @RenderBody()
                    </div>
                    @await RenderSectionAsync("Scripts", required: false)

                    <footer class="content-footer footer bg-footer-theme site-footer">
                        <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
                            <div class="mb-2 mb-md-0">
                                © @DateTime.Now.Year, ThemeSelection
                            </div>
                        </div>
                    </footer>

                    <div class="content-backdrop fade"></div>
                </main>
            </div>
        </div>

        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    @* Sección JS *@
    <script src="~/lib/js/popper.js"></script>
    <script src="~/lib/js/bootstrap.js"></script>
    <script src="~/lib/js/perfect-scrollbar.js"></script>
    <script src="~/lib/js/menu.js"></script>        
    <script src="~/lib/js/main.js"></script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>

</body>

</html>